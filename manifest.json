{
  "name": "Galerie",
  "short_name": "Galerie",
  "description": "Une galerie de JemaOS pour visualiser des images, des vid√©os et des fichiers audio",
  "start_url": "./",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "minimal-ui"],
  "background_color": "#202124",
  "theme_color": "#202124",
  "icons": [
    {
      "src": "icons/icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-192x192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml"
    },
    {
      "src": "icons/icon-512x512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml"
    }
  ],
  "file_handlers": [
    {
      "action": "./",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".svg"],
        "video/*": [".mp4", ".webm", ".mkv", ".avi", ".mov"],
        "audio/*": [".mp3", ".wav", ".ogg", ".flac"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  "share_target": {
    "action": "./",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "video/*", "audio/*", ".pdf"]
        }
      ]
    }
  }
}
